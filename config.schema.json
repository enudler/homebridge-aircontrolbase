{
  "pluginAlias": "AirControlBase",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "title": "email",
        "type": "string",
        "required": true,
        "default": "email used in aircontrolbase"
      },
      "password": {
        "title": "password",
        "type": "string",
        "required": true,
        "default": "password used in aircontrolbase"
      },
      "avoidRefreshStatusOnUpdateInMs": {
        "title": "Ignore status refresh in server on case of update in homekit",
        "type": "integer",
        "required": true,
        "default": 15000
      },
      "refreshDevicesEachMs": {
        "title": "The amount of milliseconds when go to aircontrolbase to refresh the device states from the server",
        "type": "integer",
        "required": true,
        "default": 60000
      },
      "refreshHomeKitEachMs": {
        "title": "The amount of milliseconds when refresh device states on homekit side",
        "type": "integer",
        "required": true,
        "default": 10000
      }
    }
    }
  }
}